@model PESA.Models.Yayin

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<div class="row">
    <h3>Silmek istediğinize emin misiniz?</h3>
    <div>
        <h4>Yayin</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Başlık
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Yayin_Baslik)
            </dd>

            <dt>
                Fotoğraf
            </dt>

            <dd>
                <img src="~/Content/Upload/Yayin/Foto/@Model.Yayin_Foto" width="180" height="100" alt="" />
            </dd>

            <dt>
                İçerik
            </dt>

            <dd>
                @Html.Raw(Model.Yayin_Icerik)
            </dd>

            <dt>
                Özet
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Yayin_Ozet)
            </dd>

            <dt>
                Etiket
            </dt>

            <dd>
                @Html.DisplayFor(model => model.YayinEtiket)
            </dd>

            <dt>
                Yazar
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Yayin_Yazar)
            </dd>

            <dt>
                Dosya
            </dt>

            <dd>
                <a href="~/Content/Upload/Yayin/Dosya/@Model.Yayin_Dosya">@Model.Yayin_Dosya</a>
            </dd>

            <dt>
                Tarih
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Yayin_Tarih)
            </dd>

            <dt>
                Yayın Tipi
            </dt>

            <dd>
                @Html.DisplayFor(model => model.YayinTip.YayinTip_Adi)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-danger" /> |
                @Html.ActionLink("Geri Dön", "Index")
            </div>
        }
    </div>
</div>